#!/bin/bash
# Test Starship with different themes

echo "ğŸš€ Testing Starship theme integration..."
echo ""

themes=("nord" "gruvbox-dark" "catppuccin-mocha" "tokyo-night")

for theme in "${themes[@]}"; do
    echo "ğŸ¨ Applying theme: $theme"
    if flavours apply "$theme" 2>/dev/null; then
        echo "âœ… Theme applied successfully"
        echo "ğŸ“‹ Current Starship colors:"
        echo "  - Directory: $(grep 'style.*#.*bold' ~/.config/starship.toml | head -1 | cut -d'"' -f2)"
        echo "  - Git branch: $(grep -A1 '\[git_branch\]' ~/.config/starship.toml | grep style | cut -d'"' -f2)"
        echo "  - Success prompt: $(grep 'success_symbol' ~/.config/starship.toml | cut -d'#' -f2 | cut -d')' -f1)"
        echo ""
        sleep 2
    else
        echo "âŒ Theme $theme not available"
        echo ""
    fi
done

echo "ğŸ¯ Theme integration test complete!"
echo "ğŸ’¡ Run 'flavours apply <theme>' to change themes"
echo "âš™ï¸  Edit ~/.config/starship.toml to customize prompt"