/* LLM REPL V3 - Terminal-Native Theme */
/* Basic styling for Phase 1 - will be enhanced in Phase 3 */

/* Tokyo Night inspired colors for initial version */
App {
    background: #1a1b26;
    color: #c0caf5;
}

Header {
    background: #24283b;
    color: #c0caf5;
    text-style: bold;
}

Footer {
    background: #24283b;
    color: #9aa5ce;
}

/* Timeline display */
#timeline-placeholder {
    background: #1a1b26;
    color: #c0caf5;
    border: round #414868;
    padding: 1;
    margin: 1 0;
}

/* Input area */
Input {
    background: #1a1b26;
    color: #c0caf5;
    border: solid #414868;
}

Input:focus {
    border: solid #7aa2f7;
}

Button {
    background: #24283b;
    color: #c0caf5;
    border: solid #414868;
}

Button:hover {
    background: #3b4261;
    border: solid #7aa2f7;
}

Button.-primary {
    background: #9ece6a;
    color: #1a1b26;
    border: solid #9ece6a;
}

Button.-primary:hover {
    background: #9ece6a;
    color: #1a1b26;
    text-style: bold;
}