/* V3-minimal: Minimal layout styling for proper sizing */

/* Main container should fill the screen */
#main-container {
    height: 100vh;
}

/* Timeline takes most of the space */
#timeline-container {
    height: 1fr;
}

/* Sub-block styling - slightly indented and smaller than main blocks */
.timeline-sub-block {
    margin-left: 2;
    margin-bottom: 1;
    padding: 1;
}

/* Different styling for different sub-block types */
.timeline-sub-block-step {
    border: solid $secondary;
}

.timeline-sub-block-detail {
    border: solid $accent;
}

.timeline-sub-block-result {
    border: solid $success;
}

/* Input container should be minimal height - just enough for the text box */
#input-container {
    height: auto;
    min-height: 3;
    max-height: 10;
}

/* Input should resize based on content but stay reasonable */
#prompt-input {
    height: auto;
    min-height: 3;
    max-height: 10;
    /* Terminal-native styling - thin borders, minimal aesthetics */
    border: solid $primary;
    background: $surface;
    color: $text;
}

/* Multiline input gets slightly more space but still constrained */
#prompt-input.multiline {
    max-height: 8;
}