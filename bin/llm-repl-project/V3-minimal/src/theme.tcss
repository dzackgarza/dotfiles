/* V3-minimal: V3's exact chat styling */

/* Main container should fill the screen */
#main-container {
    height: 100vh;
}

/* Chat container - V3's exact pattern */
#chat-container {
    height: 1fr;
    overflow-y: scroll;
}

/* Staging container - for live cognition */
#staging-container {
    height: 3;  /* Minimized state */
    border: solid $primary;  /* Make it visible */
    margin: 0 0 1 0;
}

/* Processing state overrides */
#staging-container.processing {
    height: 12 !important;  /* Fixed height during processing */
    overflow-y: auto;
}

/* V3's exact Chatbox CSS */
Chatbox {
    height: auto;
    width: 1fr;
    margin: 1 2;
    padding: 1 2;
}

.assistant-message {
    border: round $accent 60%;
}

.human-message {
    border: round $primary;
}

.system-message {
    border: round $secondary 50%;
    opacity: 0.8;
}

/* Sub-block styling - slightly indented and smaller than main blocks */
.timeline-sub-block {
    margin-left: 2;
    margin-bottom: 1;
    padding: 1;
}

/* Different styling for different sub-block types */
.timeline-sub-block-step {
    border: solid $secondary;
}

.timeline-sub-block-detail {
    border: solid $accent;
}

.timeline-sub-block-result {
    border: solid $success;
}

/* Input container should be minimal height - just enough for the text box */
#input-container {
    height: auto;
    min-height: 3;
    max-height: 10;
}

/* Input should resize based on content but stay reasonable */
#prompt-input {
    height: auto;
    min-height: 3;
    max-height: 10;
    /* Terminal-native styling - thin borders, minimal aesthetics */
    border: solid $primary;
    background: $surface;
    color: $text;
}

/* Multiline input gets slightly more space but still constrained */
#prompt-input.multiline {
    max-height: 8;
}