
/* Unified Timeline Widget Styles */

.unified-timeline {
    padding: 1;
    height: 100%;
}

.unified-block {
    height: auto;
    width: auto;
    min-width: 12;
    max-width: 1fr;
    margin: 1 0;
    padding: 1;
    border: solid green;
}

.unified-block-live {
    border: solid green;
}

.unified-block-inscribed {
    border: solid blue;
}

.unified-block.state-live {
    border: solid green;
}

.unified-block.state-transitioning {
    border: solid yellow;
}

.unified-block.state-inscribed {
    border: solid blue;
}

.unified-block-header {
    padding: 0 1;
}

.unified-block-content {
    padding: 1;
}

.unified-block-metadata {
    padding: 0 1;
}

.unified-sub-blocks {
    margin-left: 2;
    padding-left: 1;
}

/* Role-specific styling */
.unified-block-user {
    border: solid green;
}

.unified-block-assistant {
    border: solid blue;
}

.unified-block-cognition {
    border: solid purple;
}

.unified-block-tool {
    border: solid orange;
}

.unified-block-error {
    border: solid red;
}
