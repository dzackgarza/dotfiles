/* Processing Widget styles for Debug Mode */

ProcessingWidget {
    height: auto;
    width: 1fr;
    margin: 1 2;
    padding: 1;
}

/* State-based styling */
ProcessingWidget.queued {
    opacity: 0.6;
    border: dashed $secondary;
}

ProcessingWidget.processing {
    border: thick $warning;
    background: $boost;
}

ProcessingWidget.done {
    border: solid $success;
    opacity: 0.9;
}

/* Progress bar container */
.progress-container {
    height: 3;
    border: solid $primary;
    padding: 0 1;
}

/* Timer and token displays */
.processing-stats {
    dock: top;
    height: 3;
    content-align: center middle;
}

.processing-timer {
    color: $warning;
    text-style: bold;
}

.processing-tokens {
    color: $accent;
    margin: 0 2;
}