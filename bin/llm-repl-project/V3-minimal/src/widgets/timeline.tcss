/* Timeline Widget Styles */

/* TurnBlockWidget styles */
TurnBlockWidget {
    border: round $accent;
    margin-bottom: 1;
    padding: 0 1;
    height: auto;
    min-height: 0;
}

/* TimelineBlockWidget styles */
TimelineBlockWidget {
    border: round $primary;
    margin-bottom: 1;
    padding: 0 1;
    height: auto;
    min-height: 0;
    width: 100%;
}

TimelineBlockWidget.timeline-block-cognition {
    border: round $secondary;
}

.sub-block {
    border: round $accent;
    width: 90%;
    margin: 1 2;
    padding: 0 1;
    height: auto;
    min-height: 0;
}

/* SubBlockWidget styles */
SubBlockWidget {
    height: auto;
    min-height: 0;
}