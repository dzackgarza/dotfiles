/* V3's Exact Chatbox CSS */

Chatbox {
  height: auto;
  width: auto;
  min-width: 12;
  max-width: 1fr;
  margin: 0 1;
  padding: 0 2;
}

.assistant-message {
    width: 1fr;
    border: round $accent 60%;
}

.human-message {
    border: round $primary;
}


.system-message {
    border: round $warning 50%;
    background: $surface 5%;
}