{
  "extends": "stylelint-config-standard",
  "_comment": "Textual-specific CSS properties are ignored below. For the definitive list of all Textual CSS properties, see: https://textual.textualize.io/styles/ (comprehensive reference with individual property documentation)",
  "rules": {
    "comment-empty-line-before": null,
    "declaration-empty-line-before": null,
    "custom-property-empty-line-before": null,
    "selector-class-pattern": null,
    "selector-id-pattern": null,
    "selector-type-case": null,
    "selector-type-no-unknown": null,
    "shorthand-property-no-redundant-values": null,
    "declaration-property-value-no-unknown": null,
    "property-no-unknown": [
      true,
      {
        
        "ignoreProperties": [
          "align",
          "dock",
          "layer",
          "offset",
          "content-align",
          "border-title-color",
          "border-title-style",
          "border-title-align",
          "border-title-background",
          "border-subtitle-color",
          "border-subtitle-background",
          "scrollbar-color",
          "scrollbar-color-hover",
          "scrollbar-color-active",
          "scrollbar-background",
          "scrollbar-background-hover",
          "scrollbar-background-active",
          "scrollbar-size-vertical",
          "scrollbar-size-horizontal",
          "scrollbar-gutter",
          "link-style",
          "link-color-hover",
          "link-background-hover",
          "link-style-hover",
          "text-style",
          "text-opacity",
          "hatch",
          "tint",
          "overflow-x",
          "overflow-y",
          "scroll-x",
          "scroll-y",
          "grid-size",
          "grid-columns",
          "grid-rows",
          "column-span",
          "row-span",
          "layout",
          "keyline",
          "outline",
          "loading",
          "can-focus",
          "title-align"
        ]
      }
    ],
    "value-keyword-case": [
      "lower",
      {
        "ignoreKeywords": [
          "AUTO",
          "vkey",
          "hkey",
          "thick",
          "outer",
          "wide",
          "round",
          "ascii",
          "blank",
          "dashed",
          "double",
          "heavy",
          "inner",
          "panel",
          "tall",
          "hidden"
        ]
      }
    ]
  }
}